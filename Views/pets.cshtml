<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Tamagotchi!</title>
  </head>
  <body>
    <h1>Select the Tamagotchi you want to play with!</h1>
    <ul>
      @foreach (var pet in Model)
      {
        <li><a href="/pets/@pet.Id">@pet.Name</a></li>
      }
    </ul>
  </body>
</html>
